{
  "name": "@vacano/ui",
  "version": "1.4.2",
  "description": "Vacano React components library",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./icons": {
      "import": {
        "types": "./dist/icons.d.ts",
        "default": "./dist/icons.js"
      },
      "require": {
        "types": "./dist/icons.d.cts",
        "default": "./dist/icons.cjs"
      }
    },
    "./lib": {
      "import": {
        "types": "./dist/lib.d.ts",
        "default": "./dist/lib.js"
      },
      "require": {
        "types": "./dist/lib.d.cts",
        "default": "./dist/lib.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "STORYBOOK_BASE=/storybook/ storybook build -o docs/public/storybook",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "prepare": "husky"
  },
  "sideEffects": false,
  "packageManager": "pnpm@9.15.1",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vacano-house/vacano-ui.git"
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "design-system",
    "atomic-design",
    "emotion"
  ],
  "license": "MIT",
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "printWidth": 100,
    "plugins": [
      "@ianvs/prettier-plugin-sort-imports"
    ],
    "importOrder": [
      ".css",
      "",
      "^react$",
      "^react-dom$",
      "",
      "<THIRD_PARTY_MODULES>",
      "",
      "^\\./",
      "^\\.\\./(?!\\.)",
      "^\\.\\./\\.\\./(?!\\.)",
      "^\\.\\./\\.\\./\\.\\./(?!\\.)",
      "^\\.\\./\\.\\./\\.\\./\\.\\./"
    ]
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "peerDependencies": {
    "@emotion/react": "^11.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "dependencies": {
    "@emotion/styled": "^11.14.1",
    "@tanstack/react-virtual": "^3.13.13",
    "clsx": "^2.1.1",
    "hq-cropper": "^4.0.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.3",
    "@emotion/react": "^11.14.0",
    "@eslint/js": "^9.39.2",
    "@fontsource/inter": "^5.2.8",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@storybook/addon-a11y": "^10.1.10",
    "@storybook/addon-docs": "^10.1.10",
    "@storybook/addon-onboarding": "^10.1.10",
    "@storybook/react-vite": "^10.1.10",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-storybook": "^10.1.10",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "storybook": "^10.1.10",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.50.1",
    "vite": "^6.0.6",
    "vite-plugin-dts": "^4.4.0",
    "vitepress": "^1.5.0",
    "vitest": "^4.0.16"
  }
}
